<% layout('layouts/boilerplate') %>
    <h1>Campgrounds</h1>
    <div>
        <a href="/campgrounds/new">Add Campground</a>
    </div>
    <ul>
        <% for(let campground of campgrounds){ %>
            <li>
                <%= campground.title %>
            </li>
            <% } %>
    </ul>
    <h1>All campgrounds</h1>
        <ul>
            <% for(let campground of campgrounds){ %>
                <div class="card">
                    <div class="row">
                        <div class="col-md-4">
                            <img class="img-fluid" src="<%= campground.image %>" alt="Please check the network">
                        </div>
                        <div class="col-md-8">
                            <div class="card-body">
                                <h5 class="card-title">
                                    <%= campground.title %>
                                </h5>
                                <p class="card-text">
                                    <%= campground.description %>
                                </p>
                                <small class="text-muted">
                                    <%= campground.location %>
                                </small>
                                <a class="btn btn-primary" href="/campgrounds/<%= campground._id %>">
                                    Read More
                                </a>
                                <% if(currentUser && campground.author && campground.author.equals(currentUser._id)) { %>
                                    <form action="/campgrounds/<%= campground._id %>?_method=DELETE" method="POST" class="mt-3">
                                        <button class="btn btn-danger">Delete</button>
                                    </form>
                                <% } %>
                            </div>
                        </div>
                    </div>
                </div>
            <% } %>
        </ul>
    