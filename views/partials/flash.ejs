<% if(success && success.length){ %>
  <div class="alert flash-alert alert-success alert-dismissible fade show mx-auto my-3" role="alert">
    <%= success %>
    <button type="button" class="btn-close btn-close-white" data-bs-dismiss="alert" aria-label="Close"></button>
  </div>
<% } %>

<% if(error && error.length){ %>
  <div class="alert flash-alert alert-danger alert-dismissible fade show mx-auto my-3" role="alert">
    <%= error %>
    <button type="button" class="btn-close btn-close-white" data-bs-dismiss="alert" aria-label="Close"></button>
  </div>
<% } %>

<style>
  .flash-alert {
    max-width: 600px;
    border-radius: 1rem;
    padding: 1.25rem 1.5rem;
    box-shadow: 0 8px 20px rgba(0, 0, 0, 0.4);
    font-size: 0.95rem;
    font-weight: 500;
    border: none;
  }

  .alert-success {
    background-color: #2e7d32;
    color: #e0f7e9;
  }

  .alert-danger {
    background-color: #b71c1c;
    color: #ffebee;
  }

  .btn-close-white {
    filter: brightness(5); /* Makes close icon visible on dark backgrounds */
  }

  body {
    background-color: #121212;
    color: #f0f0f0;
  }
</style>
